@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book>

<div class="text-center">
    <h1>Check Out Professor Hilton's Book Recommendations!</h1>
</div>

<div class="text-center">
    @foreach (var x in Model)
    {
        <div class="border d-inline-block w-25 p-3">
            <h4>@x.Title</h4>
            <p>Author: @x.AuthorFirst @x.AuthorMiddle @x.AuthorLast</p>
            <p>Publisher: @x.Publisher</p>
            <p>ISBN: @x.ISBN</p>
            <p>Classification: @x.Classification</p>
            <p>Category: @x.Category</p>
            <p>Price: $@x.Price</p>
        </div>
    }
</div>

